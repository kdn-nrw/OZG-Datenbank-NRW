{
    "name": "kdn-nrw/ozg",
    "description" : "The data warehouse application from KDN NRW containing the OZG database",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^7.2",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "antishov/doctrine-extensions-bundle": "^1.4",
        "doctrine/doctrine-migrations-bundle": "^2.0",
        "friendsofsymfony/ckeditor-bundle": "^1.2",
        "jms/serializer-bundle": "^3.7",
        "phpoffice/phpspreadsheet": "^1.10",
        "sensio/framework-extra-bundle": "^5.5",
        "shapecode/cron-bundle": "^3.2",
        "sonata-project/admin-bundle": "^3.72",
        "sonata-project/doctrine-orm-admin-bundle": "^3.8",
        "sonata-project/easy-extends-bundle": "^2.5",
        "sonata-project/formatter-bundle": "^4.1",
        "sonata-project/intl-bundle": "^2.5",
        "sonata-project/translation-bundle": "^2.4",
        "sonata-project/user-bundle": "^4.3",
        "symfony/apache-pack": "^1.0",
        "symfony/dotenv": "^4.4",
        "symfony/flex": "^1.1",
        "symfony/mailer": "^4.4",
        "symfony/monolog-bundle": "^3.3",
        "symfony/security-http": "^4.4.7",
        "symfony/serializer": "^4.4",
        "symfony/swiftmailer-bundle": "^3.4",
        "symfony/webpack-encore-bundle": "^1.7",
        "symfony/yaml": "^4.4",
        "twig/intl-extra": "^3.0",
        "vich/uploader-bundle": "^1.10"
    },
    "require-dev": {
        "dama/doctrine-test-bundle": "^6.3",
        "oomphinc/composer-installers-extender": "^1.1",
        "symfony/browser-kit": "^4.4",
        "symfony/css-selector": "4.4.*",
        "symfony/phpunit-bridge": "^4.4",
        "symfony/profiler-pack": "^1.0"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "egeloen/ckeditor-bundle": "*",
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "test": [
            "bin/phpunit ./tests/"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "suggest": {
        "symfony/profiler-pack": "Allows easy debugging of application",
        "symfony/maker-bundle": "Provides creation commands"
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "4.4.*"
        }
    }
}
