{% extends '@SonataAdmin/CRUD/base_list_field.html.twig' %}

{% block field %}
    <div>
        {% for serviceSystem in object.serviceSystems %}
            {% if loop.index > 1 %}
                <br>
            {% endif %}
            {% for jurisdiction in serviceSystem.jurisdictions %}
                {% if loop.index > 1 %}
                    ,
                {% endif %}
                {{ jurisdiction.name }}
            {% endfor %}
        {% endfor %}
    </div>
{% endblock %}