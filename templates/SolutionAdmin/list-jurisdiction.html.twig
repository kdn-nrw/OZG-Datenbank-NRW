{% extends get_admin_template('base_list_field', admin.code) %}

{% block field %}
    {# @var object \App\Entity\Solution #}
    <div>
        {% for serviceSystem in object.serviceSystems %}
            {% if loop.index > 1 %}
                <br>
            {% endif %}
            {% for jurisdiction in serviceSystem.jurisdictions %}
                {% if loop.index > 1 %}
                    ,
                {% endif %}
                {{ jurisdiction.name }}
            {% endfor %}
        {% endfor %}
    </div>
{% endblock %}