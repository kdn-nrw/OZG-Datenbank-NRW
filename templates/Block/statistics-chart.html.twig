{% extends sonata_block.templates.block_base %}

{% block block %}
    {% set isAdminMode = context is defined and context.getSetting('mode') == 'admin' and admin_pool is defined %}
    <div class="panel panel-default {{ settings.class }}">
        {% if settings.title is not empty %}
            <div class="panel-heading">
                <h4 class="panel-title">
                    {% if settings.icon %}
                        <i class="{{ settings.icon }}" aria-hidden="true"></i>
                    {% endif %}
                    {% if settings.translation_domain %}
                        {{ settings.title|trans({}, settings.translation_domain) }}
                    {% else %}
                        {{ settings.title }}
                    {% endif %}
                </h4>
            </div>
        {% endif %}

        <div class="panel-body">
            <div class="mb-chart-container" style="position: relative;margin: auto;" data-url="{{ path('app_statistics_chart', {'key': chartKey}) }}">
            </div>
        </div>
    </div>
{% endblock %}