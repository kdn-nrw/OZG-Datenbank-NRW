{% extends base_template %}

{% block sonata_nav %}
{% endblock sonata_nav %}

{% block logo %}
{% endblock logo %}

{% block sonata_left_side %}
{% endblock sonata_left_side %}

{% block body_attributes %}class="sonata-bc login-page"{% endblock %}

{% block sonata_wrapper %}

    <div class="login-box">
        {% block login_box_header %}
            <div class="login-logo">
                <a href="{{ path('sonata_admin_dashboard') }}">
                    {% if admin_pool.getOption('title_mode') in ['single_image', 'both'] %}
                        <div>
                            <img style="width:64px;" src="{{ asset(admin_pool.titlelogo) }}" alt="{{ admin_pool.title }}">
                        </div>
                    {% endif %}
                    {% if admin_pool.getOption('title_mode') in ['single_text', 'both'] %}
                        <span>{{ admin_pool.title }}</span>
                    {% endif %}
                </a>
            </div>
        {% endblock %}
        <div class="login-box-body">
            <p>{{ 'app.frontend.login.check_email'|trans({'tokenLifetime': tokenLifetime}, 'messages')|nl2br }}</p>
            <a href="{{ path('sonata_user_admin_security_login') }}">
                {{ 'app.frontend.login.title_user_authentication'|trans({}, 'messages') }}
            </a>
        </div>
    </div>

{% endblock sonata_wrapper %}