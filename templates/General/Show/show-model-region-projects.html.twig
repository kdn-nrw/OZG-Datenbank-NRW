{% if entities|length > 0 %}
    {# @var field_description \Sonata\DoctrineORMAdminBundle\Admin\FieldDescription #}
    {% set refFieldDesc = field_description is defined ? field_description : null %}
    {% set refSettings = app_get_reference_settings('App\\Entity\\ModelRegionProject', refFieldDesc) %}
    {# @var refSettings \App\Model\ReferenceSettings #}
    <div class="box box-primary">
        <div class="box-header">
            <h4 class="box-title">
                {{ refSettings.listTitle|trans }}
            </h4>
        </div>
        <div class="box-body table-responsive no-padding">
            <table class="table table-bordered table-condensed">
                <tr>
                    {% include 'General/Show/Table/table-head-model-region-projects.html.twig' %}
                    {% if refSettings.edit.enabled %}
                        <th></th>
                    {% endif %}
                </tr>
                {% for child in entities %}
                    {# @var child \App\Entity\ModelRegionProject #}
                    <tr>
                        <td>
                            {% if refSettings.show.enabled and refSettings.admin.hasAccess(refSettings.show.route, child) %}
                                <a href="{{ refSettings.admin.generateObjectUrl(refSettings.show.route, child, {'id': child.id}) }}">
                                    {{ child.name }}
                                </a>
                            {% else %}
                                {{ child.name }}
                            {% endif %}
                        </td>
                        <td>
                            {% if child.projectStartAt %}
                                {{ child.projectStartAt|format_datetime('dd.MM.yyyy') }}
                            {% endif %}
                        </td>
                        <td>
                            {% if child.projectEndAt %}
                                {{ child.projectEndAt|format_datetime('dd.MM.yyyy') }}
                            {% endif %}
                        </td>
                        <td>
                            {% if child.organisations|length > 0 %}
                                {% for organisation in child.organisations %}
                                    {# @var organisation \App\Entity\Organisation #}
                                    {{ organisation.name }}
                                    {% if not loop.last %}, {% endif %}
                                {% endfor %}
                            {% endif %}
                        </td>
                        {% if refSettings.edit.enabled %}
                            <td>
                                {% include 'General/Show/Partials/link-to-child.html.twig' %}
                            </td>
                        {% endif %}
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endif %}