{% if entities|length > 0 %}
    {# @var field_description \Sonata\DoctrineORMAdminBundle\Admin\FieldDescription #}
    {% set entityClass = showSolution ? 'App\\Entity\\Solution' : 'App\\Entity\\Service' %}
    {% set refFieldDesc = field_description is defined ? field_description : null %}
    {% set refSettings = app_get_reference_settings(entityClass, admin.appContext, refFieldDesc) %}
    {# @var refSettings \App\Model\ReferenceSettings #}
    {% set showContacts = refSettings.isBackendMode %}
    <table class="table table-bordered table-condensed">
        <tr>
            {% if showSolution %}
                {% include 'General/Show/Table/table-head-solutions.html.twig' %}
            {% else %}
                {% include 'General/Show/Table/table-head-services.html.twig' %}
            {% endif %}
            <th>
                {{ 'app.solution.entity.maturity'|trans }}
            </th>
            {% if refSettings.edit.enabled %}
                <th>
                </th>
            {% endif %}
        </tr>
        {% for child in entities %}
            {# @var child \App\Entity\ServiceSolution #}
            <tr>
                {% if showSolution %}
                    {% set editObjectId = child.solution.id %}
                    {% include 'General/Show/Table/table-row-cells-solutions.html.twig' with {'child': child.solution} %}
                {% else %}
                    {% if child.service %}
                        {% set editObjectId = child.service.id %}
                        {% include 'General/Show/Table/table-row-cells-services.html.twig' with {'child': child.service} %}
                    {% else %}
                        <td colspan="7" class="service-is-missing">
                            <span class="text-warning">{{ 'app.solution.messages.no_service_selected'|trans }}</span>
                        </td>
                        {% set editObjectId = null %}
                    {% endif %}
                {% endif %}
                <td>
                    {% if child.maturity %}
                        {{ child.maturity.name }}
                    {% endif %}
                </td>
                {% if refSettings.edit.enabled and editObjectId %}
                    <td>
                        {% if refSettings.admin.hasAccess(refSettings.edit.route, child) %}
                            <a href="{{ refSettings.admin.generateUrl(refSettings.edit.route, { 'id': editObjectId }) }}">
                                <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                            </a>
                        {% endif %}
                    </td>
                {% endif %}
            </tr>
        {% endfor %}
    </table>
{% endif %}