{# @var object \App\Entity\AbstractService #}
{% if elements['ruleAuthorities'] is defined and object.ruleAuthorities|length > 0 %}
    <div class="row">
        <div class="col-xs-12 col-md-2">
            {{ elements['ruleAuthorities']|render_view_element(object)}}
        </div>
        {% if elements['authorityStateMinistries'] is defined and object.authorityStateMinistriesEnabled and object.authorityStateMinistries|length > 0 %}
            <div class="col-xs-12 col-md-5 col-lg-4 col-xl-3">
                {{ elements['authorityStateMinistries']|render_view_element(object)}}
            </div>
        {% endif %}
        {% if elements['authorityBureaus'] is defined and object.authorityBureausEnabled and object.authorityBureaus|length > 0 %}
            <div class="col-xs-12 col-md-5 col-lg-4 col-xl-3">
                {{ elements['authorityBureaus']|render_view_element(object)}}
            </div>
        {% endif %}
    </div>
{% endif %}