{% if showSolution %}
    {% set tableHeaders = ['name', 'url', 'description'] %}
    {% set labelPrefix = 'app.solution.entity.' %}
    {% include 'General/Show/Table/table-head-solutions.html.twig' with {'tableHeaders': tableHeaders, 'labelPrefix': labelPrefix} %}
{% else %}
    {% set tableHeaders = ['name', 'url',] %}
    {% set labelPrefix = 'app.form_server.entity.' %}
    {% include 'General/Show/Table/table-head-general.html.twig' with {'tableHeaders': tableHeaders, 'labelPrefix': labelPrefix} %}
{% endif %}
{% set tableHeaders = ['status', 'article_number', 'assistant_type', 'article_key', 'usable_as_print_template'] %}
{% set labelPrefix = 'app.form_server_solution.entity.' %}
{% for field in tableHeaders %}
    <th>
        <span class="sort-wrap">{{ (labelPrefix~field)|trans }}</span>
        {% include 'MetaData/help-popover.html.twig' with {'objectOrClass': '\\App\\Entity\\FormServerSolution', 'propertyKey': field, 'placement': 'top'} %}
    </th>
{% endfor %}