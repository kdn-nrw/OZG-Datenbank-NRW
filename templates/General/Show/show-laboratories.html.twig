{% if entities|length > 0 %}
    {# @var field_description \Sonata\DoctrineORMAdminBundle\Admin\FieldDescription #}
    {% set refFieldDesc = field_description is defined ? field_description : null %}
    {% set refSettings = app_get_reference_settings('App\\Entity\\Laboratory', refFieldDesc) %}
    {# @var refSettings \App\Model\ReferenceSettings #}
    <div class="box box-primary">
        <div class="box-header">
            <h4 class="box-title">
                {{ refSettings.listTitle|trans }}
                {% if fieldMetaHelp is defined %}{{ fieldMetaHelp|raw }}{% endif %}
            </h4>
        </div>
        <div class="box-body table-responsive no-padding">
            <table class="table table-bordered table-condensed">
                <tr>
                    {% set tableHeaders = ['name', 'url', 'description', 'service_providers', 'participants_other'] %}
                    {% set labelPrefix = 'app.laboratory.entity.' %}
                    {% include 'General/Show/Table/table-head-general.html.twig' with {'tableHeaders': tableHeaders, 'labelPrefix': labelPrefix} %}
                    {% if refSettings.edit.enabled %}
                        <th></th>
                    {% endif %}
                </tr>
                {% for child in entities %}
                    {# @var child \App\Entity\Laboratory #}
                    <tr>
                        <td>
                            {% include 'General/Show/Partials/link-child-name-show.html.twig' %}
                        </td>
                        <td>
                            {% if child.url %}
                                {{ child.url }}
                            {% endif %}
                        </td>
                        <td>
                            {{ child.description|nl2br }}
                        </td>
                        <td>
                            {% if child.serviceProviders %}
                                {% for grandChild in child.serviceProviders %}
                                    <span class="badge">{{ grandChild.name }}</span>
                                {% endfor %}
                            {% endif %}
                        </td>
                        <td>
                            {% if child.participantsOther %}
                                {{ child.participantsOther }}
                            {% endif %}
                        </td>
                        {% if refSettings.edit.enabled %}
                        <td>
                            {% include 'General/Show/Partials/link-to-child.html.twig' %}
                        </td>
                        {% endif %}
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endif %}