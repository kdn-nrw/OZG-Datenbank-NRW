{% if action == constant('App\\Model\\EntityReferenceProperty::ACTION_DELETE') %}
    <i class="fas fa-trash" title="{{ 'app.object_references.actions.delete'|trans }}" aria-hidden="true"></i>
{% elseif action == constant('App\\Model\\EntityReferenceProperty::ACTION_REMOVE_MM_REFERENCE') %}
    <i class="fas fa-unlink" title="{{ 'app.object_references.actions.remove_mm'|trans }}" aria-hidden="true"></i>
{% elseif action == constant('App\\Model\\EntityReferenceProperty::ACTION_SET_NULL') %}
    <i class="fas fa-unlink" title="{{ 'app.object_references.actions.set_null'|trans }}" aria-hidden="true"></i>
{% elseif action == constant('App\\Model\\EntityReferenceProperty::ACTION_ERROR') %}
    <i class="fas fa-exclamation-triangle" title="{{ 'app.object_references.actions.error'|trans }}" aria-hidden="true"></i>
{% elseif action == constant('App\\Model\\EntityReferenceProperty::ACTION_UNKNOWN') %}
    <i class="fas fa-question-circle" title="{{ 'app.object_references.actions.unknown'|trans }}" aria-hidden="true"></i>
{% elseif action == constant('App\\Model\\EntityReferenceProperty::ACTION_NOTHING') %}
    <i class="fas fa-check-circle" title="{{ 'app.object_references.actions.nothing'|trans }}" aria-hidden="true"></i>
{% endif %}