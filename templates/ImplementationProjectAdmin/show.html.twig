
{% extends '@SonataAdmin/CRUD/base_show.html.twig' %}


{% block show_groups %}
    {# @var object \App\Entity\ImplementationProject #}
    <div class="row">
        {% block field_row %}
            {% for code in groups %}
                {% set show_group = admin.showgroups[code] %}
                <div class="{{ show_group.class|default('col-md-12') }} {{ no_padding|default(false) ? 'nopadding' }}">
                    <div class="{{ show_group.box_class }}">
                        <div class="box-header">
                            <h4 class="box-title">
                                {% block show_title %}
                                    {{ 'app.implementation_project.entity.name'|trans }}: <strong>{{ object.name }}</strong>
                                {% endblock %}
                            </h4>
                        </div>
                        <div class="box-body">
                            <div class="row">
                                <div class="col-xs-12">
                                    {{ elements['status']|render_view_element(object)}}
                                </div>
                            </div>
                            {% if object.description %}
                                <div class="item-property">
                                    {{ object.description|nl2br }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="col-xs-12">
                    {% include 'General/Show/show-solutions.twig' %}
                </div>
                <div class="col-xs-12">
                    {% include 'General/Show/show-service-systems.twig' %}
                </div>
                <div class="col-xs-12">
                    {% include 'General/Show/show-laboratories.html.twig' %}
                </div>
            {% endfor %}
        {% endblock %}

    </div>
{% endblock %}
