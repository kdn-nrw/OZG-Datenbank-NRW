{% extends '@SonataAdmin/CRUD/list_choice.html.twig' %}

{% block field %}
{% apply spaceless %}
    {# @var object \App\Entity\ImplementationProject #}
    {{ object.status }}
    {% set statusDate = object.statusDate(object.status) %}
    {% if statusDate is not null %}
        <div class="project-status-date">
            ({{ statusDate|date('d.m.Y') }})
        </div>
    {% endif %}
{% endapply %}
{% endblock %}