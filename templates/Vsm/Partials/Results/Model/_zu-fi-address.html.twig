{# @var address \App\Api\Consumer\Model\ZuFi\AddressResult #}
<div class="item item-address address-type-{{ address.type }}">
    {{ address|nl2br }}
    {% if address.unmappedData|length > 0 %}
        {% set mapValueHtml = include('Vsm/Partials/Results/Model/_unmapped.html.twig', {'unmappedData': address.unmappedData}) %}
        {% if mapValueHtml|trim|length > 0 %}
            <div class="unmapped-values uv-address">
                {{ mapValueHtml|raw }}
            </div>
        {% endif %}
    {% endif %}
</div>