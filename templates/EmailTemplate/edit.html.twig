{% extends '@SonataAdmin/CRUD/base_edit.html.twig' %}

{% block sonata_tab_content %}
    {{ parent() }}
    {% if object %}
        {% set templateModel = app_email_template_get_model(object) %}
        {% if templateModel is not null %}
            {% set markers = app_email_template_get_markers(templateModel, true) %}
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <h4 class="box-title">
                            Marker
                        </h4>
                    </div>
                    <div class="box-body table-responsive no-padding">
                        <table class="table table-condensed table-striped">
                            <tr>
                                <th>Name</th>
                                <th>Testwert</th>
                            </tr>
                            {% for markerKey, markerValue in markers %}
                                <tr>
                                    <th>{{ markerKey }}</th>
                                    <th>{{ markerValue }}</th>
                                </tr>
                            {% endfor %}
                        </table>
                    </div>
                </div>
            </div>
        {% endif %}
    {% endif %}
{% endblock sonata_tab_content %}
